<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:layout_weight="3"
            android:textColor="@color/accent"
            android:textSize="@dimen/_25ssp"
            android:fontFamily="@font/myfont"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:scaleType="centerCrop" />
    </LinearLayout>
    <TextView
        android:id="@+id/what_to_Eat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_wouled_you_like_to_eat"
        android:textSize="@dimen/_17ssp"
        android:fontFamily="@font/myfont"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/linear_header"
        app:layout_constraintStart_toStartOf="@id/linear_header"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/random_meal_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/what_to_Eat_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
       >
        <ImageView
            android:id="@+id/random_meal_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/randomMealShimmerIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/what_to_Eat_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:visibility="visible"
            layout="@layout/image_shimmer"/>
    <TextView
        android:id="@+id/over_populate_meal_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/over_populate_items"
        app:layout_constraintTop_toBottomOf="@id/random_meal_card"
        app:layout_constraintStart_toStartOf="@id/random_meal_card"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:fontFamily="@font/myfont"
        android:textSize="@dimen/_17ssp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:scrollIndicators="none"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/categories_Tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/over_populate_meal_Tv">

            <LinearLayout
                android:id="@+id/popularMeals_Shimmer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:orientation="horizontal">
                <include layout="@layout/popular_meal_shimmer" />
                <include layout="@layout/popular_meal_shimmer" />
            </LinearLayout>
        </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/populate_meals_Rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/over_populate_meal_Tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/categories_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categories"
        app:layout_constraintTop_toBottomOf="@id/populate_meals_Rv"
        app:layout_constraintStart_toStartOf="@id/over_populate_meal_Tv"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/myfont"
        android:textStyle="bold"
        android:textSize="@dimen/_17ssp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_Rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/categories_Tv"
        app:layout_constraintStart_toStartOf="@id/categories_Tv"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <LinearLayout
            android:id="@+id/categories_shimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:weightSum="6"
            app:layout_constraintTop_toBottomOf="@id/categories_Tv"
            app:layout_constraintStart_toStartOf="@id/categories_Tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                layout="@layout/category_item_shimmer" />
            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                layout="@layout/category_item_shimmer" />
            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                layout="@layout/category_item_shimmer" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>